{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web3-typescript-typings"
    ]
  },
  "typeAcquisition": {
    "enable": true
  }
}